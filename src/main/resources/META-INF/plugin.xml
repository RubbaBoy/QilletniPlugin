<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <resource-bundle>messages.QilletniBundle</resource-bundle>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>dev.qilletni.intellij.QilletniPlugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Qilletni Language Support</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://qilletni.dev/">Adam Yarris</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Qilletni language support: syntax, references, and integrations. Adds Spotify-assisted selection for songs, albums, and collections.
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.plugins.yaml</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Qilletni" language="Qilletni" extensions="ql" implementationClass="dev.qilletni.intellij.QilletniFileType"/>

        <lang.parserDefinition language="Qilletni" implementationClass="dev.qilletni.intellij.QilletniParserDefinition"/>

        <lang.ast.factory language="Qilletni" implementationClass="dev.qilletni.intellij.QilletniASTFactory"/>

        <lang.syntaxHighlighterFactory language="Qilletni" implementationClass="dev.qilletni.intellij.QilletniSyntaxHighlighterFactory"/>

        <colorSettingsPage implementation="dev.qilletni.intellij.QilletniColorSettingsPage"/>

        <lang.documentationProvider language="Qilletni" implementationClass="dev.qilletni.intellij.QilletniDocumentationProvider"/>

        <psi.referenceContributor language="yaml" implementation="dev.qilletni.intellij.yaml.QilletniYamlReferenceContributor"/>
        <completion.contributor language="yaml" implementationClass="dev.qilletni.intellij.yaml.QilletniYamlNativeClassCompletionContributor"/>
        <localInspection language="yaml"
                          groupPath="Qilletni"
                          shortName="QilletniYamlNativeClassResolve"
                          displayName="Unresolved native class"
                          enabledByDefault="true"
                          implementationClass="dev.qilletni.intellij.yaml.QilletniYamlNativeClassResolveInspection"/>

        <psi.referenceContributor language="Qilletni" implementation="dev.qilletni.intellij.references.QilletniReferenceContributor"/>
        <completion.contributor language="Qilletni" implementationClass="dev.qilletni.intellij.completion.QilletniCompletionContributor"/>
        <completion.contributor language="Qilletni" implementationClass="dev.qilletni.intellij.completion.QilletniAutoImportCompletionContributor"/>
        <lang.findUsagesProvider language="Qilletni" implementationClass="dev.qilletni.intellij.findusages.QilletniFindUsagesProvider"/>
        <renamePsiElementProcessor implementation="dev.qilletni.intellij.refactoring.QilletniRenameEntityAndConstructorProcessor"/>

        <lang.braceMatcher language="Qilletni" implementationClass="dev.qilletni.intellij.QilletniBraceMatcher"/>
        <lang.quoteHandler language="Qilletni" implementationClass="dev.qilletni.intellij.QilletniQuoteHandler"/>
        <enterHandlerDelegate implementation="dev.qilletni.intellij.QilletniEnterHandler"/>
        <intentionAction>
            <language>Qilletni</language>
            <category>Qilletni</category>
            <className>dev.qilletni.intellij.intentions.QilletniSelectSpotifyIntention</className>
            <descriptionDirectoryName>dev.qilletni.intellij.intentions.QilletniSelectSpotifyIntention</descriptionDirectoryName>
        </intentionAction>
        <intentionAction>
            <language>Qilletni</language>
            <category>Qilletni</category>
            <className>dev.qilletni.intellij.intentions.QilletniInsertMusicIntention</className>
            <descriptionDirectoryName>dev.qilletni.intellij.intentions.QilletniInsertMusicIntention</descriptionDirectoryName>
        </intentionAction>
        <codeInsight.lineMarkerProvider language="Qilletni" implementationClass="dev.qilletni.intellij.gutter.QilletniMusicLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="Qilletni" implementationClass="dev.qilletni.intellij.gutter.QilletniNativeBindingLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="dev.qilletni.intellij.gutter.QilletniJavaToQilletniLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="dev.qilletni.intellij.gutter.QilletniJavaClassToYamlLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="yaml" implementationClass="dev.qilletni.intellij.gutter.QilletniYamlNativeClassLineMarkerProvider"/>
        <gotoDeclarationHandler implementation="dev.qilletni.intellij.yaml.QilletniJavaClassToYamlGotoDeclarationHandler"/>
        <applicationConfigurable instance="dev.qilletni.intellij.settings.QilletniSpotifyConfigurable" id="dev.qilletni.intellij.settings.QilletniSpotifyConfigurable" displayName="Qilletni: Spotify" parentId="tools"/>
        <applicationConfigurable instance="dev.qilletni.intellij.library.QilletniLibrariesConfigurable" id="dev.qilletni.intellij.settings.QilletniLibrariesConfigurable" displayName="Qilletni: Libraries" parentId="tools"/>
        <additionalLibraryRootsProvider implementation="dev.qilletni.intellij.library.QilletniAdditionalLibraryRootsProvider"/>
        <applicationService serviceImplementation="dev.qilletni.intellij.library.QilletniLibrariesSettings"/>
        <stubIndex implementation="dev.qilletni.intellij.index.QilletniEntityIndex"/>
        <stubIndex implementation="dev.qilletni.intellij.index.QilletniFunctionIndex"/>
        <stubIndex implementation="dev.qilletni.intellij.index.QilletniExtMethodIndex"/>
        <lang.importOptimizer language="Qilletni" implementationClass="dev.qilletni.intellij.refactoring.QilletniImportOptimizer"/>

        <applicationService serviceImplementation="dev.qilletni.intellij.toolchain.QilletniToolchainSettings"/>
        <projectService serviceImplementation="dev.qilletni.intellij.toolchain.QilletniToolchainService"/>
        
        <newProjectWizard.languageGenerator implementation="dev.qilletni.intellij.project.QilletniLanguageNewProjectWizard"/>

        <configurationType implementation="dev.qilletni.intellij.runconfig.QilletniRunConfigurationType"/>
        <configurationType implementation="dev.qilletni.intellij.runconfig.QilletniBuildRunConfigurationType"/>
        <runConfigurationProducer implementation="dev.qilletni.intellij.runconfig.QilletniRunConfigurationProducer"/>
        <applicationConfigurable instance="dev.qilletni.intellij.toolchain.QilletniToolchainConfigurable" id="dev.qilletni.intellij.settings.QilletniToolchainConfigurable" displayName="Qilletni: Toolchain" parentId="tools"/>
        <consoleFilterProvider implementation="dev.qilletni.intellij.execution.QilletniConsoleFilterProvider"/>

        <postStartupActivity implementation="dev.qilletni.intellij.project.QilletniSourceRootStartupActivity"/>
        <notificationGroup id="Qilletni Source Root" displayType="BALLOON" isLogByDefault="false"/>

        <localInspection language="Qilletni"
                          groupPath="Qilletni"
                          shortName="ExtensionReceiverParam"
                          displayName="Extension function must declare receiver parameter"
                          enabledByDefault="true"
                          implementationClass="dev.qilletni.intellij.inspections.QilletniExtensionReceiverParamInspection"/>

        <codeInsight.declarativeInlayProvider
                group="PARAMETERS_GROUP"
                implementationClass="dev.qilletni.intellij.hints.QilletniExtensionReceiverDeclarativeHintsProvider"
                isEnabledByDefault="true"
                language="Qilletni"
                nameKey="qilletni.inlay.receiverType.name"
                providerId="qilletni.receiverType"/>
        <toolWindow id="Qilletni Libraries" factoryClass="dev.qilletni.intellij.library.ui.QilletniLibrariesToolWindowFactory" anchor="right" canCloseContents="false"/>
    </extensions>

    <actions>
        <action id="dev.qilletni.intellij.actions.QilletniSelectSpotifyAction" class="dev.qilletni.intellij.actions.QilletniSelectSpotifyAction" text="Qilletni: Select Spotify music">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="Default for XWin" first-keystroke="ctrl alt M"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta alt M"/>
        </action>
        <action id="dev.qilletni.intellij.actions.QilletniResetLibraryCacheAction" class="dev.qilletni.intellij.actions.QilletniResetLibraryCacheAction" text="Qilletni: Reset Library Cache">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>